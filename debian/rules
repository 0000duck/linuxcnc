#!/usr/bin/make -f
# Simple set of debian/rules that uses debhelper.
# Based on an example by Joey Hess. 

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

build: build-stamp
build-stamp:
	# dh_error is not a valid command and will generate an error in
	# it's self - An abort is required, so it doesn't matter...
	dh_error "Not ready to use yet - This is work in progress."
	dh_testdir

	# Add here commands to compile the package.
	./configure
	$(MAKE)
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	./configure
	$(MAKE) clean
	rm -f Makefile.inc

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	# Create the install tree - Not complete, but it gives
	# us a starting point.
	mkdir -p debian/tmp/usr/local/emc2
	# Copy the documentation
	cp -fR doc/ debian/tmp/usr/local/emc2
	# Sample ngc
	cp -fR programs/ debian/tmp/usr/local/emc2
	# Don't forget the tcl stuff
	cp -fR tcl/ debian/tmp/usr/local/emc2
	# and finally the assortment of runtime bits.

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install

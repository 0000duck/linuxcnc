ifneq ($(GTK_VERSION),)
CLASSICLADDERSRCS := $(addprefix hal/classicladder/, \
	arithm_eval.c \
	arrays.c \
	calc.c \
	calc_sequential.c \
	classicladder.c \
	classicladder_gtk.c \
	config_gtk.c \
	drawing.c \
        drawing_sequential.c \
	edit.c \
	edit_gtk.c \
	edit_sequential.c \
	editproperties_gtk.c \
	files.c \
	files_sequential.c \
	manager.c \
	manager_gtk.c \
        symbols.c \
        symbols_gtk.c \
	vars_access.c \
        ) hal/utils/miscgtk.c
	
GTK_CFLAGS +=	-DGTK_INTERFACE
ifeq ($(GTK_VERSION), 1.2)
GTK_CFLAGS += -DNO_GTK_STYLE_GET_FONT
else
GTK_CFLAGS += -DGTK2
endif


$(call TOOBJSDEPS,$(CLASSICLADDERSRCS)) : EXTRAFLAGS = $(GTK_CFLAGS) -DSEQUENTIAL_SUPPORT -DHAL_SUPPORT -DDYNAMIC_PLCSIZE -DRT_SUPPORT
$(call TOOBJS, $(CLASSICLADDERSRCS)): Makefile.inc

USERSRCS += $(CLASSICLADDERSRCS)

../bin/classicladder: $(call TOOBJS, $(CLASSICLADDERSRCS)) ../lib/libemchal.so
	$(ECHO) Linking $(notdir $@)
	@$(CC) $(LDFLAGS) $(CFLAGS) $(ULFLAGS) -lpthread -o $@ $^ $(GTK_LIBS)

TARGETS += ../bin/classicladder
endif
